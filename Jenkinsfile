#!/bin/Groovy
pipeline {
    agent any
    stages {
        stage('What is your name') {
           
            steps {
                echo 'My name is Abiodun'
                
            }
        }
        stage('Check date') {
           
            steps {
                sh 'date'
               
            }
        }
        stage('Check calendar') {
           
            steps {
                sh 'cal'
               
            }
        }
         stage('Class') {
           
            steps {
                echo 'i love this class >> niko.txt'
               
            }
        }
         stage('situation') {
           
            steps {
                echo 'nigerian network cut cheche off'
               
            }
        }
         stage('honourable cheche') {
           
            steps {
                sh 'touch alliance.sh'
               
            }
        } 
         stage('dev class') {
           
            steps {
                sh 'i love linux and devops'
               
            }
        } 
         stage('mood') {
           
            steps {
                sh 'everything is going to be alright'
               
            }
        } 
    }
}
